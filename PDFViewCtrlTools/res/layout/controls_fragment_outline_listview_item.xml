<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginVertical="@dimen/controls_outline_view_row_margin"
    android:layout_height="@dimen/list_line_height">

    <TextView
        android:id="@+id/control_outline_listview_item_textview"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/padding_large"
        android:layout_marginEnd="@dimen/padding_xxsmall"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/primary_text_size" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/control_outline_listview_item_imageview"
        android:layout_width="@dimen/controls_outline_image_view_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/controls_outline_image_view_padding"
        android:paddingBottom="@dimen/controls_outline_image_view_padding"
        android:layout_marginEnd="@dimen/padding_xxsmall"
        android:layout_marginRight="@dimen/padding_xxsmall"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/controls_outline_dialog_imageview_forward_description"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

</LinearLayout>
