<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/colorBackground">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_undo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_undo_black_24dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_redo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_redo_black_24dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_style"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_color_lens_black_24dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_bold"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_bold_24px" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_italic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_italic_24px" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_underline"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_underlined_24px" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_strikethrough"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_strikethrough_24px" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_insert_numbers"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_list_numbered_24px" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_insert_bullets"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_list_bulleted_24px" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_indent"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_indent_increase_24px" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_outdent"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_indent_decrease_24px" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_align_left"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_align_left_24px" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_align_center"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_align_center_24px" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_align_right"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_align_right_24px" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_subscript"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_subscript_black_24dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_superscript"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_superscript_black_24dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/action_blockquote"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackground"
                android:alpha="0.54"
                app:srcCompat="@drawable/ic_format_quote_black_24dp" />

        </LinearLayout>

    </HorizontalScrollView>
</merge>