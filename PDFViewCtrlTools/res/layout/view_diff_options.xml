<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_large">

    <LinearLayout
        android:id="@+id/diff_select_file_layout_1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/diff_file_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearance"
            android:text="@string/diff_select_file_title"
            android:textSize="@dimen/label_text_size" />

        <Button
            android:id="@+id/diff_select_file_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tools_misc_select"
            android:textColor="?attr/colorAccent"
            android:background="?android:attr/selectableItemBackground"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/diff_color_layout_1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/diff_color_title"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="@dimen/label_text_size" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/diff_color_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_circle_black_24dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/diff_color_chevron_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/action_button_min_padding"
            android:layout_marginRight="@dimen/action_button_min_padding"
            android:alpha="0.54"
            android:tint="?android:attr/colorForeground"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

    </LinearLayout>

    <com.pdftron.pdf.controls.AdvancedColorView
        android:id="@+id/diff_color_picker_1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/diff_annotation_switch_1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"
        android:gravity="center_vertical"
        android:checked="true"
        android:text="@string/diff_annotations_on"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.15"
        android:layout_margin="@dimen/padding_large"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/diff_select_file_layout_2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/diff_file_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearance"
            android:text="@string/diff_select_file_title"
            android:textSize="@dimen/label_text_size" />

        <Button
            android:id="@+id/diff_select_file_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tools_misc_select"
            android:textColor="?attr/colorAccent"
            android:background="?android:attr/selectableItemBackground"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/diff_color_layout_2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/diff_color_title"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="@dimen/label_text_size" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/diff_color_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_circle_black_24dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/diff_color_chevron_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/action_button_min_padding"
            android:layout_marginRight="@dimen/action_button_min_padding"
            android:alpha="0.54"
            android:tint="?android:attr/colorForeground"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

    </LinearLayout>

    <com.pdftron.pdf.controls.AdvancedColorView
        android:id="@+id/diff_color_picker_2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/diff_annotation_switch_2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"
        android:gravity="center_vertical"
        android:checked="true"
        android:text="@string/diff_annotations_on"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.15"
        android:layout_margin="@dimen/padding_large"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/diff_blend_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/diff_blend_mode"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="@dimen/label_text_size" />

        <Spinner
            android:id="@+id/diff_blend_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <Button
        android:id="@+id/diff_compare"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_large"
        android:text="@string/diff_compare"
        android:textColor="?attr/colorAccent"
        android:background="?android:attr/selectableItemBackground"/>

</LinearLayout>
