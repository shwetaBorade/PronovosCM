<?xml version="1.0" encoding="utf-8"?>

<com.pdftron.pdf.widget.UniformWidthRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cell_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_xxsmall">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/color_image_view"
            android:focusable="false"
            android:layout_centerInParent="true"
            android:focusableInTouchMode="false"
            android:padding="@dimen/icon_star_padding"
            android:contentDescription="@string/tools_grid_color_btn_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.7" />
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/color_selected"
            app:srcCompat="@drawable/ic_check_black_24dp"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/color_remove"
        app:srcCompat="@drawable/ic_remove_white_24dp"
        android:tint="@color/qm_item_color"
        android:visibility="gone"
        android:layout_width="@dimen/tools_grid_color_picker_selection_star_size"
        android:layout_height="@dimen/tools_grid_color_picker_selection_star_size"
        android:layout_centerInParent="true"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/color_buttons"
        app:srcCompat="@drawable/ic_add_white_24dp"
        android:tint="@color/qm_item_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/icon_min_padding"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"/>

</com.pdftron.pdf.widget.UniformWidthRelativeLayout>
