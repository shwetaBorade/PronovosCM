<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="true"
    tools:context=".activity.CreateTransfersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarView"
            layout="@layout/toolbar_view" />

        <TextView
            android:id="@+id/offlineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_12577b"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="@string/offline_mode"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_10sdp"
            android:visibility="gone" />
<!--
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_21sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_21sdp">

                    <TextView
                        android:id="@+id/no1TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_circle_filled_blue"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dashboard_text_size"
                        app:layout_constraintEnd_toEndOf="@id/pickupTextView"
                        app:layout_constraintStart_toStartOf="@id/pickupTextView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/pickDropView"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="@id/no1TextView"
                        app:layout_constraintEnd_toStartOf="@id/no2TextView"
                        app:layout_constraintStart_toEndOf="@id/no1TextView"
                        app:layout_constraintTop_toTopOf="@id/no1TextView" />

                    <TextView
                        android:id="@+id/no2TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_circle_border_gray"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/gray_6c7b8a"
                        android:textSize="@dimen/dashboard_text_size"
                        app:layout_constraintEnd_toEndOf="@id/dropoffTextView"
                        app:layout_constraintStart_toStartOf="@id/dropoffTextView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/dropEqView"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="@id/no3TextView"
                        app:layout_constraintEnd_toStartOf="@id/no3TextView"
                        app:layout_constraintStart_toEndOf="@id/no2TextView"
                        app:layout_constraintTop_toTopOf="@id/no3TextView" />

                    <TextView
                        android:id="@+id/no3TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_circle_border_gray"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"

                        android:text="3"
                        android:textColor="@color/gray_6c7b8a"
                        android:textSize="@dimen/dashboard_text_size"
                        app:layout_constraintEnd_toEndOf="@id/equipmentTextView"
                        app:layout_constraintStart_toStartOf="@id/equipmentTextView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/eqInfoView"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="@id/no3TextView"
                        app:layout_constraintEnd_toStartOf="@id/no4TextView"
                        app:layout_constraintStart_toEndOf="@id/no3TextView"
                        app:layout_constraintTop_toTopOf="@id/no3TextView" />

                    <TextView
                        android:id="@+id/no4TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_circle_border_gray"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/gray_6c7b8a"
                        android:textSize="@dimen/dashboard_text_size"
                        app:layout_constraintEnd_toEndOf="@id/infoTextView"
                        app:layout_constraintStart_toStartOf="@id/infoTextView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/pickupTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="PICK-UP\nINFO"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_6c7b8a"
                        android:textSize="@dimen/dashboard_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/no1TextView" />

                    <TextView
                        android:id="@+id/dropoffTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="DROP-OFF\nINFO"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_6c7b8a"
                        android:textSize="@dimen/dashboard_text_size"
                        app:layout_constraintEnd_toStartOf="@id/equipmentTextView"
                        app:layout_constraintStart_toEndOf="@id/pickupTextView"
                        app:layout_constraintTop_toBottomOf="@id/no1TextView" />

                    <TextView
                        android:id="@+id/equipmentTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Equipment"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_6c7b8a"
                        android:textSize="@dimen/dashboard_text_size"
                        app:layout_constraintEnd_toStartOf="@id/infoTextView"
                        app:layout_constraintStart_toEndOf="@id/dropoffTextView"
                        app:layout_constraintTop_toBottomOf="@id/no1TextView" />

                    <TextView
                        android:id="@+id/infoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="sans-serif-medium"
                        android:text="INFO"
                        android:textAllCaps="true"
                        android:textColor="@color/gray_6c7b8a"
                        android:textSize="@dimen/dashboard_text_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/no1TextView" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/listContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

        <!--</android.support.v4.widget.NestedScrollView>-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
