<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_fafafa">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/mainView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_9sdp"
            android:layout_marginRight="@dimen/_9sdp"
            android:background="@color/white">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_15sdp">


                <TextView
                    android:id="@+id/pickupDateView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:background="@android:color/transparent"
                    android:focusedByDefault="false"
                    android:fontFamily="sans-serif-medium"
                    android:imeOptions="flagNoExtractUi"
                    android:importantForAutofill="no"
                    android:lines="1"
                    android:maxLines="1"
                    android:nextFocusUp="@id/pickUpTimeViewET"
                    android:singleLine="true"
                    android:text="@string/pick_up_date"
                    android:textColor="@color/gray_535a73"
                    android:textColorHint="@color/gray_535a73"
                    android:textSize="@dimen/dashboard_text_size"
                    app:layout_constraintEnd_toStartOf="@id/pickupTimeView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/pickupTimeView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:focusedByDefault="false"
                    android:fontFamily="sans-serif-medium"
                    android:imeOptions="flagNoExtractUi"
                    android:importantForAutofill="no"
                    android:lines="1"
                    android:maxLines="1"
                    android:nextFocusUp="@id/pickUpTimeViewET"
                    android:singleLine="true"
                    android:text="@string/time"
                    android:textColor="@color/gray_535a73"
                    android:textColorHint="@color/gray_535a73"
                    android:textSize="@dimen/dashboard_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pickupDateView"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pickupDateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:background="@android:color/transparent"
                    android:focusedByDefault="false"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/gray_535a73"
                    android:textSize="@dimen/dashboard_text_size"
                    app:layout_constraintEnd_toStartOf="@id/pickupTimeTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pickupDateView" />


                <TextView
                    android:id="@+id/pickupTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:focusedByDefault="false"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/gray_535a73"
                    android:textSize="@dimen/dashboard_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pickupDateTextView"
                    app:layout_constraintTop_toBottomOf="@id/pickupDateView" />


                <TextView
                    android:id="@+id/pickupLocationView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:focusedByDefault="false"
                    android:fontFamily="sans-serif-medium"
                    android:imeOptions="flagNoExtractUi"
                    android:importantForAutofill="no"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/pick_up_location"
                    android:textColor="@color/gray_535a73"
                    android:textColorHint="@color/gray_535a73"
                    android:textSize="@dimen/dashboard_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pickupDateTextView" />

                <TextView
                    android:id="@+id/pickupLocationTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@android:color/transparent"
                    android:focusedByDefault="false"
                    android:fontFamily="sans-serif"
                    android:imeOptions="flagNoExtractUi"
                    android:importantForAutofill="no"

                    android:nextFocusUp="@id/pickUpTimeViewET"
                    android:textColor="@color/gray_535a73"
                    android:textSize="@dimen/dashboard_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pickupLocationView" />


                <TextView
                    android:id="@+id/pickupContactView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:background="@android:color/transparent"
                    android:focusedByDefault="false"
                    android:fontFamily="sans-serif-medium"
                    android:imeOptions="flagNoExtractUi"
                    android:importantForAutofill="no"
                    android:lines="1"
                    android:maxLines="1"
                    android:nextFocusUp="@id/pickUpTimeViewET"
                    android:singleLine="true"
                    android:text="@string/pick_up_contact"
                    android:textColor="@color/gray_535a73"
                    android:textColorHint="@color/gray_535a73"
                    android:textSize="@dimen/dashboard_text_size"
                    app:layout_constraintEnd_toStartOf="@id/pickupContactNumberView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pickupLocationTextView" />


                <TextView
                    android:id="@+id/pickupContactNumberView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:focusedByDefault="false"
                    android:fontFamily="sans-serif-medium"
                    android:imeOptions="flagNoExtractUi"
                    android:importantForAutofill="no"
                    android:lines="1"
                    android:maxLines="1"
                    android:nextFocusUp="@id/pickUpTimeViewET"
                    android:singleLine="true"
                    android:text="@string/contact_number"
                    android:textColor="@color/gray_535a73"
                    android:textColorHint="@color/gray_535a73"
                    android:textSize="@dimen/dashboard_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pickupContactView"

                    app:layout_constraintTop_toBottomOf="@id/pickupLocationTextView" />

                <TextView
                    android:id="@+id/pickupContactTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:background="@android:color/transparent"
                    android:focusedByDefault="false"
                    android:fontFamily="sans-serif"
                    android:imeOptions="flagNoExtractUi"
                    android:importantForAutofill="no"

                    android:textColor="@color/gray_535a73"
                    android:textSize="@dimen/dashboard_text_size"
                    app:layout_constraintEnd_toStartOf="@id/pickupContactNumberTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pickupContactView" />


                <TextView
                    android:id="@+id/pickupContactNumberTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:focusedByDefault="false"
                    android:fontFamily="sans-serif"
                    android:imeOptions="flagNoExtractUi"
                    android:importantForAutofill="no"
                    android:textColor="@color/gray_535a73"
                    android:textSize="@dimen/dashboard_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pickupContactTextView"

                    app:layout_constraintTop_toBottomOf="@id/pickupContactNumberView" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
