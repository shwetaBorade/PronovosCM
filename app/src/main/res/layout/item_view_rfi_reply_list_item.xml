<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvRfiReplyNameTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/question"
        android:textColor="@color/gray_535a73"
        android:textSize="@dimen/dashboard_text_size" />

    <TextView
        android:id="@+id/tvRfiReplyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="2sp"
        android:textColor="@color/gray_535a73"
        android:textSize="@dimen/dashboard_text_size"
        android:textStyle="normal"
        tools:text="52" />

    <TextView
        android:id="@+id/tvRfiAttachmentLabel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/attachments_label"
        android:textColor="@color/gray_535a73"
        android:textSize="@dimen/dashboard_text_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rfiReplyAttachmentsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        />

</LinearLayout>
