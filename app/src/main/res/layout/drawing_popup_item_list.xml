<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawingView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_fafafa"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/drawingNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/_7sdp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingRight="@dimen/_7sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_13sdp" />

        <View
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_cccccc"
            android:layout_below="@id/drawingNameTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drawingNameTextView" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
