<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/projectCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_3sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/rfiDateRequirementsLableTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/date_requirement"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size" />


        <TextView
            android:id="@+id/tvReceivedLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/received"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size" />

        <TextView
            android:id="@+id/tvReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size"
            android:textStyle="normal"
            tools:text="52" />

        <TextView
            android:id="@+id/tvDueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/due"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size" />

        <TextView
            android:id="@+id/tvDue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size"
            android:textStyle="normal"
            tools:text="52" />

        <TextView
            android:id="@+id/tvOnsiteLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/onsite"

            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size" />

        <TextView
            android:id="@+id/tvOnsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size"
            android:textStyle="normal"
            tools:text="7" />

        <TextView
            android:id="@+id/tvLeadLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/lead_time"

            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size" />

        <TextView
            android:id="@+id/tvLead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size"
            android:textStyle="normal"
            tools:text="7" />
    </LinearLayout>


</androidx.cardview.widget.CardView>

