<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_fafafa"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/buildingsImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_290sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_splash_bg"
        android:scaleType="fitXY"
        android:contentDescription="@string/pronovos_image"
        />
    <ImageView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_49sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_90sdp"
        app:layout_constraintBottom_toTopOf="@+id/buildingsImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/pronovos_image"
        android:background="@drawable/ic_pronovos_logo"/>
</androidx.constraintlayout.widget.ConstraintLayout>