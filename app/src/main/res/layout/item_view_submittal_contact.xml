<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/projectCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_3sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">


        <TextView
            android:id="@+id/tvNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/name"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/gray_535a73"
                android:textSize="@dimen/dashboard_text_size"
                android:textStyle="normal"
                tools:text="52" />

            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/gray_808ba2"
                android:textSize="@dimen/dialog_subtitle_text_size"
                android:textStyle="normal"
                tools:text="52" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvResponseLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/response"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp">

            <TextView
                android:id="@+id/tvResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/gray_535a73"
                android:textSize="@dimen/dashboard_text_size"
                android:textStyle="normal"
                tools:text="52" />

            <TextView
                android:id="@+id/tvResponseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/gray_808ba2"
                android:textSize="@dimen/dialog_subtitle_text_size"
                android:textStyle="normal"
                tools:text="52" />
        </LinearLayout>

        <TextView
            android:id="@+id/tVCommentsLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/comments"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size" />

        <TextView
            android:id="@+id/tVComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size"
            android:textStyle="normal"
            tools:text="-" />

        <TextView
            android:id="@+id/tvAttachmentsLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/attachments"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size" />

        <TextView
            android:id="@+id/tvAttachmentsEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/gray_535a73"
            android:textSize="@dimen/dashboard_text_size"
            android:textStyle="normal"
            tools:text="-" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/submittalDetailAttachmentsRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
