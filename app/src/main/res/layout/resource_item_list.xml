<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resourceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/nameView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/userNameTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight=".3"
                android:fontFamily="sans-serif-medium"
                android:text="Name:"
                android:textColor="@color/gray_535a73"
                android:textSize="@dimen/dashboard_text_size"
                app:layout_constraintEnd_toStartOf="@id/userNameTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight=".7"
                android:fontFamily="sans-serif"
                android:textColor="@color/gray_535a73"
                android:textSize="@dimen/dashboard_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/userNameTV"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameView">


            <TextView
                android:id="@+id/userphoneTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight=".3"
                android:fontFamily="sans-serif-medium"
                android:text="Phone:"
                android:textColor="@color/gray_535a73"
                android:textSize="@dimen/dashboard_text_size"
                app:layout_constraintEnd_toStartOf="@id/userphoneTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userphoneTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight=".7"
                android:autoLink="phone"
                android:fontFamily="sans-serif"
                android:foreground="?attr/selectableItemBackground"
                android:textColor="@color/gray_535a73"
                android:textColorHighlight="@color/gray_535a73"
                android:textColorLink="@color/colorPrimary"
                android:textSize="@dimen/dashboard_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/userphoneTV"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emailView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phoneView">


            <TextView
                android:id="@+id/useremailTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight=".3"
                android:fontFamily="sans-serif-medium"
                android:text="Email:"
                android:textColor="@color/gray_535a73"
                android:textSize="@dimen/dashboard_text_size"
                app:layout_constraintEnd_toStartOf="@id/useremailTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.pronovoscm.utils.TextViewNoUnderline
                android:id="@+id/useremailTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight=".7"
                android:autoLink="email"
                android:foreground="?attr/selectableItemBackground"
                android:fontFamily="sans-serif"
                android:textColor="@color/gray_535a73"
                android:textColorHighlight="@color/gray_535a73"
                android:textColorLink="@color/colorPrimary"
                android:textSize="@dimen/dashboard_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/useremailTV"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>