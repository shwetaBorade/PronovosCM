
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>

    </style>
    <!--<style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">-->
    <!--<item name="android:background">@color/colorPrimary</item>-->
    <!--</style>-->

    <style name="Theme_Translucent_Dialog">
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/black_38000000</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#838484</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#222222</item>
        <item name="colorControlHighlight">#222222</item>
    </style>

    <style name="EditText">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BasicEditText">
        <item name="android:textColorHint">@color/gray_dedede</item>
        <item name="android:textColor">@color/gray_747e8d</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">#212121</item>
    </style>

    <style name="MyToolManager">
        <!-- allow editing ink annotations (only works if annotation toolbar is present) -->
        <!--<item name="edit_ink_annots">true</item>-->
        <!--&lt;!&ndash; disable image stamper tool &ndash;&gt;-->
        <!--<item name="add_image_stamper_tool">true</item>-->
        <!--&lt;!&ndash; when ink selected in annotation toolbar, it should open its own ink toolbar &ndash;&gt;-->
        <!--<item name="open_toolbar_on_pan_ink_selected">true</item>-->
        <!--&lt;!&ndash; hide the built-in page number indicator &ndash;&gt;-->
        <!--<item name="build_in_page_number_indicator">true</item>-->
        <!--&lt;!&ndash; whether to copy marked-up text of TextMarkup annot to annotation's 'status' property upon TextMarkup annotation creation &ndash;&gt;-->
        <!--<item name="copy_annotated_text_to_note">true</item>-->
        <!-- remove some tools from AnnotationToolbar and QuickMenu -->
        <!--<item name="disable_tool_modes">@array/disable_tool_modes</item>-->
    </style>

    <style name="CustomAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/blue_0061a3</item>
        <item name="colorAccent">@color/blue_0061a3</item>
        <!-- Action bar -->
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/dashboard_text_size</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/dashboard_text_size</item>
    </style>


    <attr name="amdp_theme_dark" format="boolean">false</attr>

    <style name="PDFTronAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark_day</item>
        <item name="colorAccent">@color/blue_0091ea</item> <!-- Action bar -->
        <item name="actionModeBackground">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="textViewLabelsValue">
        <item name="fontFamily">sans-serif</item>
         <item name="android:padding">@dimen/_2sdp</item>
        <item name="textColor">@color/gray_535a73</item>
        <item name="text_size">@dimen/dashboard_text_size</item>
    </style>

    <style name="textViewLabel">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="textColor">@color/tools_gray</item>
        <item name="text_size">@dimen/dashboard_text_size</item>
    </style>

    <style name="spinner_style" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
    </style>

    <style name="edit_text_with_font">
        <item name="android:textColorHint">@color/gray_dedede</item>
        <item name="android:textColor">@color/gray_747e8d</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_11sdp</item>
        <item name="text_size">@dimen/dashboard_text_size</item>
        <item name="textColor">@color/gray_747e8d</item>
    </style>

    <style name="text_input_layout">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeErrorColor">@android:color/transparent</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="StatusAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item></style>


    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray_948d8d</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>
